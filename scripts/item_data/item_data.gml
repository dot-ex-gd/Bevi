/// @fucn item_find_flag(item, flag)
function item_find_flag(_item, _flag){
	for(var i = 0; i < array_length(_item[$ "Flags"]); i++){
		if (_item[$ "Flags"][i] == _flag) return true;
	}
	
	return false;
}