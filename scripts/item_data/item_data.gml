/// @fucn item_find_flag(item, flag)
function item_find_flag(_item, _flag){
	if (!_item) { return false; }
	var _itemFlags;
	
	if (!is_struct(_item)){
		if (!variable_instance_exists(_item, "item")) { return false; }
		
		_itemFlags = _item.item[$ "itemFlags"];
	}else{
		_itemFlags = _item[$ "itemFlags"];
	}
	
	var _len = array_length(_itemFlags);
	
	for(var i = 0; i < _len; i++){
		if (_itemFlags[i] == _flag) { return true; }
	}
	
	return false;
}